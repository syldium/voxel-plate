{
    "name": "voxel-plate",
    "version": "0.1.0",
    "description": "Render a set of minecraft blocks with three.js",
    "main": "lib/VoxelPlate.js",
    "types": "lib/VoxelPlate.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/syldium/voxel-plate"
    },
    "author": "syldium <syldium@mailo.com>",
    "license": "GPL-3.0-or-later",
    "files": [
        "lib/**/*"
    ],
    "scripts": {
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\" -c .eslintrc.json"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.0.1",
        "@typescript-eslint/parser": "^4.0.1",
        "eslint": "^7.8.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-typescript": "^0.14.0",
        "lint-staged": "^10.3.0",
        "prettier": "^2.1.1",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "three": "^0.120.1"
    },
    "keywords": [
        "three.js",
        "minecraft"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts}": [
            "eslint --fix"
        ]
    }
}
